generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  contact   String @unique
  name      String?
  pdp       String?
  pdc       String?
  createdAt DateTime @default(now())
  owners    UserRelation[] @relation("OwnerRelation")
  workers   UserRelation[] @relation("WorkerRelation")
}

model UserRelation {
  id        Int   @id @default(autoincrement())
  workerId  Int
  worker    User @relation("WorkerRelation", fields: [workerId], references: [id])
  ownerId   Int
  owner     User @relation("OwnerRelation", fields: [ownerId], references: [id])
}
